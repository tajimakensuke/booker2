<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/af813d852b.js" crossorigin="anonymous"></script>
  </head>


  <header class="shadow-sm navbar-dark bg-dark text-">
  <nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
     <a class="navbar-brand p-3" href="/"><%= "Bookers" %></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">

  <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home", user_path(current_user), class:'fas fa-home text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "Users", users_path, class: 'fas fa-users text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "Books", books_path, class:'fas fa-book-open text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "logout", destroy_user_session_path, method: :delete, class:'fas fa-sign-out-alt text-white m-2' %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "fas fa-home text-white m-2" %>
        </li>
      <li class="nav-item">
        <%= link_to "About", home_about_index_path, class:"fas fa-link text-white m-2" %>
      </li>
      <li class="nav-item">
        <%= link_to "sign up", new_user_registration_path, class:"fas fa-user-plus text-white m-2 " %>
      </li>
      <li class="nav-item">
        <%= link_to "login", new_user_session_path, class:"fas fa-sign-in-alt text-white m-2 " %>
      </li>
    <% end %>
    </ul>
    </div>
    </nav>
    </header>
  <body>



    <%= yield %>
  </body>
    <footer><div class="container">
      <p class="text-center">CopyRight Infratop.inc</p>
      </div>
    </footer>

</html>
