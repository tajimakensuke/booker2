<%= render 'books/userinfo' %>

    <div class="col-8">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>画像</th>
          <th>name</th>
          <th>show</th>
        </tr>


<% @users.each do |user| %>
          <tr>
            <td>
              <div class="profile_image"><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>