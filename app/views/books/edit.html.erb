<div class="container">
  <div class="row">
    <div class="col-lg-5">
<h2>Editing book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div>
    <label for="inputBook_title">Title</label>
    <%= f.text_field :book_title, autofocus: true, id:"inputBook_title", placeholder:  "@book.book_title"  %>
  </div>
  <div>
    <label for="inputOpinion">Opinion</label>
    <%= f.text_area :opinion, autofocus: true, id:"inputIntroduction", placeholder:  "@book.opinion"  %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>

    </div>
  </div>
</div>