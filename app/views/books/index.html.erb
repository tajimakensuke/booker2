<%= render 'books/userinfo' %>

    <div class="col-8">
      <h2>books</h2>
      <table class="table">
        <tr>
          <th>画像</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% Book.all.each do |book| %>
          <tr>
            <td>
              <div class="profile_image"><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
            </td>
            <td><%= link_to book.book_title, book_path(book.id) %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>